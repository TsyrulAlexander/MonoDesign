<Window 
    x:Class="MonoDesign.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:monoGameControls="clr-namespace:MonoDesign.UI.MonoGameControls"
    xmlns:local="clr-namespace:MonoDesign.UI"
    mc:Ignorable="d"
    Title="MonoDesign.UI" 
    WindowStartupLocation="CenterScreen"
    Width="800"
    Height="480">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Left"></StackPanel>
        <StackPanel DockPanel.Dock="Right"></StackPanel>
        <monoGameControls:MonoGameContentControl />
    </DockPanel>
</Window>
